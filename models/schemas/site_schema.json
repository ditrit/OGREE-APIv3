{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OGrEE Site Schema",
  "type": "object",
  "properties": {
    "description": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "category": {
      "type": "string"
    },
    "domain": {
      "type": "string"
    },
    "createdDate": {
    },
    "lastUpdated": {
    },
    "name": {
      "type": "string",
      "pattern":"^\\w(\\w|\\-)*$"
    },
    "id": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "orientation": {
          "type": "string",
          "enum": [
            "EN",
            "NW",
            "WS",
            "SE"
          ]
        },
        "reservedColor": {
          "type": "string",
          "$ref": "refs/types.json#/definitions/color"
        },
        "technicalColor": {
          "type": "string",
          "$ref": "refs/types.json#/definitions/color"
        },
        "usableColor": {
          "type": "string",
          "$ref": "refs/types.json#/definitions/color"
        }
      }
    }
  },
  "additionalProperties":  false,
  "required": [
    "category",
    "description",
    "domain",
    "name",
    "attributes"
  ],
  "examples": [
    {
      "attributes": {
        "orientation": "NW",
        "reservedColor": "AAAAAA",
        "technicalColor": "D0FF78",
        "usableColor": "5BDCFF"
      },
      "category": "site",
      "description": [
        "site"
      ],
      "domain": "DEMO",
      "name": "SITEA",
      "parentId": "xxxx592b1ac5f3b6f313ee8f"
    }
  ]
}